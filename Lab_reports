    <script>
        // Sample data - in a real application, this would come from your database
        const itemTypesData = {
            labels: ['Crowns', 'Bridges', 'Dentures', 'Implants', 'Veneers', 'Orthodontics'],
            datasets: [{
                label: 'Number of Orders',
                data: [156, 76, 63, 28, 18, 6],
                backgroundColor: '#197CAE',
                borderColor: '#003049',
                borderWidth: 1
            }]
        };

        const doctorsData = {
            labels: ['Dr. Smith', 'Dr. Johnson', 'Dr. Brown', 'Dr. Davis', 'Dr. Wilson', 'Dr. Garcia', 'Dr. Martinez', 'Dr. Thompson', 'Dr. Anderson', 'Dr. Taylor', 'Dr. Moore', 'Dr. Jackson', 'Dr. White', 'Dr. Harris', 'Dr. Clark'],
            datasets: [{
                label: 'Number of Orders',
                data: [45, 38, 32, 28, 24, 19, 16, 14, 12, 11, 9, 8, 7, 6, 5],
                backgroundColor: '#197CAE',
                borderColor: '#003049',
                borderWidth: 1
            }]
        };

        const materialsData = {
            labels: ['Zirconia', 'PMA', 'Porcelain', 'Metal Alloy', 'Composite', 'Acrylic'],
            datasets: [{
                label: 'Usage Count',
                data: [142, 89, 67, 34, 23, 12],
                backgroundColor: '#197CAE',
                borderColor: '#003049',
                borderWidth: 1
            }]
        };

        // Chart configurations
        function getBarChartOptions() {
            return {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return `${context.dataset.label}: ${context.raw}`;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 5,
                            font: {
                                size: 12
                            }
                        }
                    },
                    x: {
                        ticks: {
                            maxRotation: 45,
                            minRotation: 45,
                            font: {
                                size: 11
                            }
                        }
                    }
                }
            };
        }

        // Chart instances
        let itemTypesChart, doctorsChart, materialsChart;

        // Initialize charts
        document.addEventListener('DOMContentLoaded', function() {
            // Item Types Bar Chart
            const itemTypesCtx = document.getElementById('itemTypesChart').getContext('2d');
            itemTypesChart = new Chart(itemTypesCtx, {
                type: 'bar',
                data: itemTypesData,
                options: getBarChartOptions()
            });

            // Doctors Bar Chart
            const doctorsCtx = document.getElementById('doctorsChart').getContext('2d');
            doctorsChart = new Chart(doctorsCtx, {
                type: 'bar',
                data: doctorsData,
                options: getBarChartOptions()
            });

            // Materials Bar Chart
            const materialsCtx = document.getElementById('materialsChart').getContext('2d');
            materialsChart = new Chart(materialsCtx, {
                type: 'bar',
                data: materialsData,
                options: getBarChartOptions()
            });

            // Animate metric values on load
            const metricValues = document.querySelectorAll('.metric-value');
            metricValues.forEach(metric => {
                const text = metric.textContent;
                const isNumber = !isNaN(parseFloat(text.replace(/[^0-9.-]/g, '')));
                
                if (isNumber) {
                    const finalValue = parseFloat(text.replace(/[^0-9.-]/g, ''));
                    const hasSymbol = text.includes('$');
                    const symbol = text.includes('$') ? '$' : '';
                    
                    metric.textContent = hasSymbol ? symbol + '0' : '0';
                    
                    let current = 0;
                    const increment = finalValue / 40;
                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= finalValue) {
                            metric.textContent = text;
                            clearInterval(timer);
                        } else {
                            const displayValue = Math.floor(current);
                            if (symbol === '$') {
                                metric.textContent = '$' + displayValue.toLocaleString();
                            } else {
                                metric.textContent = displayValue;
                            }
                        }
                    }, 30);
                }
            });
        });

        function updateReports() {
            const period = document.getElementById('periodFilter').value;
            const department = document.getElementById('departmentFilter').value;
            
            console.log(`Updating reports: ${period}, ${department}`);
            
            if (period === 'custom') {
                alert('📅 Custom Date Range\n\nPlease select start and end dates for your custom report period.');
            }
        }

        function generateReport() {
            const period = document.getElementById('periodFilter').value;
            const department = document.getElementById('departmentFilter').value;
            
            alert(`📊 Generating Report\n\nPeriod: ${period}\nDepartment: ${department}\n\nReport will include:\n• Revenue and orders summary\n• Item types distribution\n• Doctor performance ranking\n• Material usage analysis\n• Export options (PDF, Excel, CSV)`);
        }

        function exportReports() {
            alert(`📈 Export Reports\n\nAvailable export formats:\n\n📊 Dashboard Summary (PDF)\n• Key metrics and charts\n• Visual analysis\n\n📋 Detailed Data (Excel)\n• Raw data and calculations\n• Sortable tables\n\n📄 Presentation (PowerPoint)\n• Chart visualizations\n• Executive summary\n\n📊 Data Export (CSV)\n• Raw data for analysis\n• Database compatible`);
        }

        function goBack() {
            alert('🔙 Returning to main dashboard...');
        }
    </script>
</body>
